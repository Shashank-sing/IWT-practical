<% include ./partials/header %>

    <div class="container">
        <div class="container">

            <div class="m-5 p-5 mt-0">
                <div class="display-2 mt-3 mb-4">Climate Change Blogs</div>

                <% blogs.forEach(function(blog) { %>
                    <div class="m-4">
                        <a class="header blog-page-show-a" href="/blogs/<%= blog._id %>">
                            <div class="card" style="">
                                <img src="<%= blog.image %>" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h1 class="card-title">
                                        <%= blog.title %>
                                    </h1>
                                    <p class="card-text">
                                        <%= blog.created.toDateString() %>
                                    </p>
                                    <p class="card-text"><%- blog.body.substring(0, 100) %>...(Read More)</p>
                                </div>
                            </div>
                        </a>
                    </div>

                    <% }); %>
            </div>
        </div>

    </div>



    <% include ./partials/footer %>